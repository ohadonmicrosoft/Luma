{
  "extends": "next/core-web-vitals",
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    // Allow require in config files
    "@typescript-eslint/no-require-imports": "off",
    
    // Allow process.env access in config files
    "no-undef": "off",
    
    // Allow unused variables in generated files
    "@typescript-eslint/no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    
    // Disable rules that cause issues with Next.js
    "react/react-in-jsx-scope": "off",
    
    // Disable rules for generated files
    "@typescript-eslint/no-unused-expressions": "off",
    "no-prototype-builtins": "off",
    "@typescript-eslint/no-this-alias": "off",
    "no-cond-assign": "off",
    "no-control-regex": "off",
    "no-fallthrough": "off",
    "no-empty": "off",
    "no-redeclare": "off",
    "no-useless-escape": "off"
  },
  "ignorePatterns": [
    ".next/**/*",
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*",
    "out/**/*",
    "coverage/**/*",
    ".turbo/**/*",
    "*.config.js",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "next-i18next.config.js",
    "infrastructure/**/*"
  ]
} 
